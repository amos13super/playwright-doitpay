{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": ["ES2020", "DOM"],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "rootDir": "."
    },
    "include": ["src/**/*", "tests/**/*"],
    "exclude": ["dist", "node_modules"]
}